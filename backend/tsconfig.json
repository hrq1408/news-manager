{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2021",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "src/app.module.ts"]
  }
  